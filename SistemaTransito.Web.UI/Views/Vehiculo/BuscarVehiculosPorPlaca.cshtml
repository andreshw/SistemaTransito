@model IEnumerable<SistemaTransito.Dominio.Entidades.Vehiculo>

@{
    ViewBag.Title = "BuscarVehiculosPorPlaca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>BuscarVehiculosPorPlaca</h2>

<p>
    @Html.ActionLink("Crear nuevo vehiculo", "GuardarVehiculo")
</p>

@using (Html.BeginForm("BuscarVehiculosPorPlaca", "Vehiculo", FormMethod.Get))
{
<table>
    <tr>
        <td>Placa</td>
        <td><input type="text" name="placa" /></td>
    </tr>
    <tr>
        <td colspan="2"><input type="submit" value="Buscar" /></td>
    </tr>
</table>
}

<table class="table">

@foreach (var item in Model) {
    @Html.Partial("_InformacionVehiculo", item)
}

</table>
